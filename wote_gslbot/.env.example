# Wote GSL Bot Environment Variables

# Required
TELEGRAM_BOT_TOKEN=put-your-telegram-bot-token-here

# Optional but recommended
ADMIN_USER_ID=123456789
LOG_LEVEL=INFO
DB_FILE=./data/game_data.json

# Webhook mode (optional - for production deployment)
WEBHOOK_URL=https://<your-ngrok-id>.ngrok.io/webhook
WEBHOOK_PORT=5000

# Optional integrations
NGROK_AUTH_TOKEN=
SENTRY_DSN=
REDIS_URL=

# Storage backend (json or sqlite)
STORAGE_BACKEND=json

# Supabase (optional - for cloud database)
SUPABASE_URL=
SUPABASE_KEY=
